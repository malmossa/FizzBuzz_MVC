@{
    ViewData["Title"] = "Fizz Buzz";
}

@model FizzBuzz_MVC.Models.FizzBuzz

<div class="container">
    <div class="row gy-2 h-100">
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="row">
                    <h1 class="display-6 text-center mb-3">FizzBuzz</h1>
                    <h4 class="lead mb-3">
                        Please enter two numbers. The first number will be used to determine Fizz, and the second number will be used to determine Buzz. FizzBuzz will be evaluated based on the combination of these two numbers.
                    </h4>
                </div>
                <div class="row">
                    <div class="row">
                        <h5 class="text-center">Enter numbers</h5>
                        <form asp-controller="Home" asp-action="Index" method="post" class="d-flex justify-content-center align-items-center">
                            <div class="form-group me-2">
                                <label asp-for="FizzValue">Fizz Value:</label>
                                <input type="number" min="1" asp-for="FizzValue" class="form-control" placeholder="Enter Fizz" required />
                            </div>
                            <div class="form-group me-2">
                                <label asp-for="BuzzValue">Buzz Value:</label>
                                <input type="number" min="1" asp-for="BuzzValue" class="form-control" placeholder="Enter Buzz" required />
                            </div>

                            <button type="submit" class="btn btn-dark form-group mt-4">Submit</button>

                        </form>
                    </div>
                    <div class="row">
                        <h2 class="mt-5 border-bottom border-2">Results</h2>
                        <div class="table-responsive">
                            @if (Model.Results.Count > 0)
                            {
                                <table class="table-striped table-hover table table-dark">
                                    <thead>
                                        <tr>
                                            <th colspan="10">Fizz Buzz Results</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Results.Count(); i+= 10)
                                        {
                                            <tr>
                                                <td>@Model.Results[i]</td>
                                                <td>@Model.Results[i + 1]</td>
                                                <td>@Model.Results[i + 2]</td>
                                                <td>@Model.Results[i + 3]</td>
                                                <td>@Model.Results[i + 4]</td>
                                                <td>@Model.Results[i + 5]</td>
                                                <td>@Model.Results[i + 6]</td>
                                                <td>@Model.Results[i + 7]</td>
                                                <td>@Model.Results[i + 8]</td>
                                                <td>@Model.Results[i + 9]</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

